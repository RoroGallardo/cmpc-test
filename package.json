{
  "name": "cmpc-test",
  "version": "1.0.0",
  "description": "Monorepo con microservicios NestJS",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:auth": "jest --config apps/auth-service/jest.config.ts",
    "test:catalog": "jest --config apps/catalog-service/jest.config.ts",
    "test:shared": "jest --config libs/shared/jest.config.ts",
    "test:all": "jest --coverage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=json-summary --coverageReporters=html",
    "dev:auth": "nx serve auth-service",
    "dev:catalog": "nx serve catalog-service",
    "build:auth": "nx build auth-service",
    "build:catalog": "nx build catalog-service",
    "build:shared": "nx build shared",
    "build:all": "nx run-many --target=build --all",
    "graph": "nx graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
